    <script>
        /**
         * GlobalTrotter Application Logic
         * Uses a simplified state management system.
         */

        // --- 1. Data Store (Simulated DB) ---
        const DB = {
            user: null,
            destinations: [
                { id: 1, name: 'Paris', country: 'France', emoji: 'üóº' },
                { id: 2, name: 'Tokyo', country: 'Japan', emoji: 'üóæ' },
                { id: 3, name: 'New York', country: 'USA', emoji: 'üóΩ' },
                { id: 4, name: 'Bali', country: 'Indonesia', emoji: 'üèùÔ∏è' },
                { id: 5, name: 'Rome', country: 'Italy', emoji: 'üçù' },
                { id: 6, name: 'Cairo', country: 'Egypt', emoji: 'üê™' }
            ],
            trips: [], // Stores user trips
            posts: [
                { user: 'Alice', content: 'Just returned from Bali. The sunsets are unreal!', likes: 12 },
                { user: 'Bob', content: 'Tips for Tokyo subway? It is so complex!', likes: 5 },
                { user: 'Charlie', content: 'Paris is beautiful in the rain.', likes: 24 }
            ]
        };

        // --- 2. Initialization ---
        document.addEventListener('DOMContentLoaded', () => {
            checkSession();
            setupEventListeners();
        });

        function checkSession() {
            const storedUser = localStorage.getItem('gt_user');
            if (storedUser) {
                DB.user = JSON.parse(storedUser);
                initApp();
            } else {
                document.getElementById('authSection').classList.remove('hidden');
                document.getElementById('mainApp').classList.add('hidden');
            }
        }

        // --- 3. Navigation & Routing ---
        function navigateTo(viewId) {
            // Update Tab UI
            document.querySelectorAll('.nav-tab').forEach(tab => tab.classList.remove('active'));
            const activeTab = document.querySelector(`.nav-tab[onclick="navigateTo('${viewId}')"]`);
            if(activeTab) activeTab.classList.add('active');

            // Hide all views, show target
            document.querySelectorAll('.view-section').forEach(el => el.classList.add('hidden'));
            document.getElementById(`view-${viewId}`).classList.remove('hidden');

            // Specific View Loading Logic
            if (viewId === 'dashboard') renderDashboard();
            if (viewId === 'trips') renderTrips();
            if (viewId === 'community') renderCommunity();
        }

        // --- 4. Render Functions ---
        function renderDashboard() {
            const container = document.getElementById('dashboardDestinations');
            container.innerHTML = DB.destinations.map(dest => `
                <div class="card" onclick="planFor('${dest.name}')">
                    <div class="card-image">${dest.emoji}</div>
                    <div class="card-content">
                        <h3 style="font-weight: 700;">${dest.name}</h3>
                        <p style="color: var(--text-muted);">${dest.country}</p>
                    </div>
                </div>
            `).join('');
        }

        function renderTrips(filter = 'upcoming') {
            const container = document.getElementById('tripsListContainer');
            // Mock data if empty
            if (DB.trips.length === 0) {
                container.innerHTML = `
                    <div class="card" style="grid-column: 1/-1; padding: 2rem; text-align: center;">
                        <h3>No trips planned yet ‚úàÔ∏è</h3>
                        <p style="color: var(--text-muted); margin-bottom: 1rem;">Start your adventure today!</p>
                        <button class="btn" style="width: auto;" onclick="navigateTo('create')">Plan a Trip</button>
                    </div>`;
                return;
            }

            container.innerHTML = DB.trips.map(trip => `
                <div class="card">
                    <div class="card-image" style="height: 100px; font-size: 2rem;">‚úàÔ∏è</div>
                    <div class="card-content">
                        <h3>${sanitize(trip.destination)}</h3>
                        <p style="color: var(--text-muted); font-size: 0.9rem;">
                            ${trip.start} to ${trip.end}
                        </p>
                        <span style="display:inline-block; margin-top:10px; padding: 4px 8px; background: #dbeafe; color: #1e40af; border-radius: 4px; font-size: 0.8rem;">Upcoming</span>
                    </div>
                </div>
            `).join('');
        }

        function renderCommunity() {
            const container = document.getElementById('communityFeed');
            container.innerHTML = DB.posts.map(post => `
                <div class="list-item">
                    <div class="user-avatar">${post.user[0]}</div>
                    <div style="flex: 1;">
                        <strong>${post.user}</strong>
                        <p style="color: var(--text-muted);">${post.content}</p>
                    </div>
                    <div style="font-size: 0.9rem; color: var(--text-muted);">‚ù§Ô∏è ${post.likes}</div>
                </div>
            `).join('');
        }

        // --- 5. Authentication Logic ---
        function toggleAuth(view) {
            if (view === 'register') {
                document.getElementById('loginView').classList.add('hidden');
                document.getElementById('registerView').classList.remove('hidden');
            } else {
                document.getElementById('registerView').classList.add('hidden');
                document.getElementById('loginView').classList.remove('hidden');
            }
        }

        document.getElementById('loginForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const username = document.getElementById('loginUsername').value;
            // Simulated login
            if (username) {
                completeLogin({ name: username });
            }
        });

        document.getElementById('registerForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const name = document.getElementById('regName').value;
            if (name) {
                completeLogin({ name: name });
            }
        });

        function completeLogin(userData) {
            DB.user = userData;
            localStorage.setItem('gt_user', JSON.stringify(userData));
            document.getElementById('authSection').classList.add('hidden');
            initApp();
        }

        function initApp() {
            document.getElementById('mainApp').classList.remove('hidden');
            document.getElementById('headerUsername').textContent = DB.user.name;
            document.getElementById('headerAvatar').textContent = DB.user.name[0].toUpperCase();
            document.getElementById('profileName').textContent = DB.user.name;
            document.getElementById('profileAvatarBig').textContent = DB.user.name[0].toUpperCase();
            navigateTo('dashboard');
        }

        function logout() {
            localStorage.removeItem('gt_user');
            location.reload();
        }

        // --- 6. Helper Functions ---
        
        // Setup Search Logic
        document.getElementById('searchInput').addEventListener('input', (e) => {
            const query = e.target.value.toLowerCase();
            const resultsDiv = document.getElementById('searchResults');
            
            if (query.length < 2) return;

            const matches = DB.destinations.filter(d => d.name.toLowerCase().includes(query));
            
            if (matches.length > 0) {
                resultsDiv.innerHTML = matches.map(m => `
                    <div class="card" style="padding: 1rem; display: flex; align-items: center; gap: 1rem;">
                        <span style="font-size: 1.5rem;">${m.emoji}</span>
                        <div><strong>${m.name}</strong><br><small>${m.country}</small></div>
                    </div>
                `).join('');
            } else {
                resultsDiv.innerHTML = `<p style="grid-column: 1/-1; text-align: center; color: var(--text-muted);">No destinations found.</p>`;
            }
        });

        // Handle Trip Creation
        document.getElementById('newTripForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const dest = document.getElementById('tripDestination').value;
            const start = document.getElementById('tripStart').value;
            const end = document.getElementById('tripEnd').value;

            DB.trips.push({
                id: Date.now(),
                destination: dest,
                start: start,
                end: end
            });

            alert('Trip created successfully!');
            navigateTo('trips');
        });

        function planFor(destinationName) {
            document.getElementById('tripDestination').value = destinationName;
            navigateTo('create');
        }

        // Helper to setup event listeners if needed
        function setupEventListeners() {
            // Additional specialized listeners can go here
        }

        // Basic XSS Prevention
        function sanitize(str) {
            const temp = document.createElement('div');
            temp.textContent = str;
            return temp.innerHTML;
        }
    </script>
</body>
</html>
