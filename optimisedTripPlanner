        </div>

        <div id="registerView" class="auth-card hidden">
            <div class="auth-header">
                <h2>Create Account</h2>
            </div>
            <form id="registerForm">
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" id="regName" class="form-input" required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" id="regEmail" class="form-input" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" id="regPassword" class="form-input" required>
                </div>
                <button type="submit" class="btn">Sign Up</button>
            </form>
            <div class="auth-switch">
                Already have an account? <a href="#" onclick="toggleAuth('login')">Sign In</a>
            </div>
        </div>
    </div>

    <div id="mainApp" class="app-container hidden">
        <header>
            <div class="logo">üåç GlobalTrotter</div>
            <div class="user-menu" onclick="navigateTo('profile')">
                <span id="headerUsername" style="display: none;">User</span> <div class="user-avatar" id="headerAvatar">U</div>
            </div>
        </header>

        <nav class="nav-tabs">
            <button class="nav-tab active" onclick="navigateTo('dashboard')">Dashboard</button>
            <button class="nav-tab" onclick="navigateTo('create')">Plan Trip</button>
            <button class="nav-tab" onclick="navigateTo('trips')">My Trips</button>
            <button class="nav-tab" onclick="navigateTo('search')">Explore</button>
            <button class="nav-tab" onclick="navigateTo('community')">Community</button>
        </nav>

        <main class="main-content">
            
            <section id="view-dashboard" class="view-section">
                <div class="banner">
                    <h1>Ready for your next journey?</h1>
                    <p>Explore top destinations and create your itinerary.</p>
                    <button class="btn" style="background: white; color: var(--primary); width: auto; margin-top: 1rem;" onclick="navigateTo('create')">Start Planning</button>
                </div>

                <h2 class="section-title">Trending Destinations</h2>
                <div class="grid-cards" id="dashboardDestinations">
                    </div>
            </section>

            <section id="view-create" class="view-section hidden">
                <h2 class="section-title">Plan a New Trip</h2>
                <div class="card" style="padding: 2rem;">
                    <form id="newTripForm">
                        <div class="form-group">
                            <label>Where to?</label>
                            <input type="text" id="tripDestination" class="form-input" placeholder="e.g. Paris, Tokyo" required>
