                    </form>
                </div>
            </section>

            <section id="view-trips" class="view-section hidden">
                <h2 class="section-title">My Trips</h2>
                <div class="filter-bar">
                    <button class="btn" style="width: auto; padding: 0.5rem 1rem; font-size: 0.9rem;" onclick="renderTrips('upcoming')">Upcoming</button>
                    <button class="btn" style="width: auto; padding: 0.5rem 1rem; font-size: 0.9rem; background: transparent; color: var(--text-main); border: 1px solid var(--border-color);" onclick="renderTrips('past')">Past</button>
                </div>
                <div id="tripsListContainer" class="grid-cards">
                    </div>
            </section>

            <section id="view-search" class="view-section hidden">
                <h2 class="section-title">Explore Activities</h2>
                <div class="form-group">
                    <input type="text" id="searchInput" class="form-input" placeholder="Search for hiking, museums, food...">
                </div>
                <div id="searchResults" class="grid-cards">
                    <div style="text-align: center; grid-column: 1/-1; color: var(--text-muted); padding: 2rem;">
                        Start typing to find adventures...
                    </div>
                </div>
            </section>

            <section id="view-community" class="view-section hidden">
                <h2 class="section-title">Traveler Stories</h2>
                <div id="communityFeed">
                    </div>
            </section>

            <section id="view-profile" class="view-section hidden">
                <div class="card" style="text-align: center; padding: 3rem;">
                    <div class="user-avatar" style="width: 80px; height: 80px; font-size: 2rem; margin: 0 auto 1rem;" id="profileAvatarBig">U</div>
                    <h2 id="profileName">User Name</h2>
                    <p style="color: var(--text-muted); margin-bottom: 2rem;">Travel Enthusiast</p>
                    <button class="btn" style="background: #ef4444; width: auto;" onclick="logout()">Sign Out</button>
